<section class="container d-flex justify-content-center">
  <div class="col-lg-6 col-md-6">
    <div class="" data-aos="fade-up" data-aos-delay="200">
      <h3>Register</h3>
      <form action="#" class="form-signup">
        <div class="default-form-box">
          <label>Name <span>*</span></label>
          <input
            type="text"
            name="name"
            id="name"
            class="inpt"
            required="required"
          />
        </div>
        <div class="default-form-box">
          <label>Email <span>*</span></label>
          <input
            type="email"
            name="email"
            id="email"
            class="inpt"
            required="required"
          />
        </div>
        <div class="default-form-box">
          <label>Mobile Number <span>*</span></label>
          <input
            type="text"
            name="mob"
            id="mob"
            class="inpt"
            required="required"
          />
        </div>
        <div class="default-form-box">
          <label>Passwords <span>*</span></label>
          <input
            type="password"
            name="password"
            id="password"
            class="inpt"
            required="required"
          />
        </div>
        <div class="default-form-box">
          <label>Confirm Passwords<span>*</span></label>
          <input
            type="password"
            name="confirmPassword"
            id="confirmPassword"
            class="inpt"
            required="required"
          />
        </div>

        <div class="login_submit">
          <button
            class="btn btn-md btn-black-default-hover"
            type="submit"
          >Register</button>
        </div>
        <div class="mt-3">
          <a href="/login"><span>Login</span></a>
        </div>
      </form>
    </div>
  </div>
</section>
<script src="/js/login.js"></script>