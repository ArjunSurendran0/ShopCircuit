                    <!-- DataTales Example -->
                    <div class="card shadow mb-4">
                        <div class="card-header py-3 d-flex justify-content-between">
                            <h6 class="m-0 font-weight-bold text-primary">Product Details</h6>
                            <a href="/admin/productAdd"><h6 class="m-0 font-weight-bold text-primary">Add Product</h6></a>
                        </div>
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                                    <thead>
                                        <tr>
                                              <th>Product Name</th>
                                            <th>Brand</th>
                                            <th>Varient</th>
                                            <th>Color</th>
                                            <th>Price</th>
                                            <th>Category</th>
                                            <th>Offer</th>
                                            <th>Discount(%)</th>
                                            <th>Edit</th>
                                            <th>Action</th>
                                        </tr>
                                    </thead>
                                    <tfoot>
                                        <tr>
                                            <th>Product Name</th>
                                            <th>Brand</th>
                                            <th>Varient</th>
                                            <th>Color</th>
                                            <th>Price</th>
                                            <th>Category</th>
                                            <th>Offer</th>
                                            <th>Discount(%)</th>
                                            <th>Edit</th>
                                            <th>Action</th>
                                        </tr>
                                    </tfoot>
                                    <tbody>
                                      {{#each product}}
                                        <tr>
                                            <td>{{productName}}</td>
                                            <td>{{brand}}</td>
                                            <td>{{varient}}</td>
                                            <td>{{color}}</td>
                                            <td>{{price}}</td>
                                            <td>{{category.categoryName}}</td>
                                            <td>{{offer_name}}</td>
                                            <td>{{discount}}%</td>
                                            <td><a href="/admin/productEdit/{{_id}}">edit</a></td>
                                            <td><a href="/admin/productDelete/{{_id}}">delete</a></td>
                                        </tr>
                                        {{/each}}
                                        
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>

                </div>
                <!-- /.container-fluid -->

            </div>
            <!-- End of Main Content -->
            <script src="/vendor/datatables/jquery.dataTables.min.js"></script>
